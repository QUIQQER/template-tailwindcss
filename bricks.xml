<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <bricks>

        <!-- generall settings for all bricks -->
        <brick control="*">
            <settings>
                <setting name="general.fullWidth" type="checkbox">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.general.fullWidth"/>
                </setting>
                <setting name="general.noSpacing" type="checkbox">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.general.noSpacing"/>
                </setting>
            </settings>
        </brick>

        <!-- Hero Header -->
        <brick control="\QUI\TemplateTailwindCss\Controls\HeroHeader">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="brick.heroHeader.title"/>
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="brick.heroHeader.description"/>
            </description>

            <settings>
                <setting name="backgroundImage" class="media-image">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.heroHeader.backgroundImage"/>
                </setting>

                <setting name="minHeight" type="select">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.heroHeader.minHeight.text"/>

                    <option value="30vh">30%</option>
                    <option value="40vh">40%</option>
                    <option value="50vh">50%</option>
                    <option value="60vh">60%</option>
                    <option value="70vh">70%</option>
                    <option value="80vh">80%</option>
                    <option value="90vh">90%</option>
                    <option value="100vh">100%</option>
                </setting>

                <setting name="image" class="media-image">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.heroHeader.image"/>
                </setting>

                <setting name="imageHeight" type="select">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.heroHeader.imageHeight.text"/>

                    <option value="200px">200px</option>
                    <option value="250px">250px</option>
                    <option value="300px">300px</option>
                    <option value="350px">350px</option>
                    <option value="400px">400px</option>
                    <option value="450px">450px</option>
                    <option value="500px">500px</option>
                    <option value="550px">550px</option>
                    <option value="600px">600px</option>
                </setting>
            </settings>
        </brick>

        <!--Vertical Tab Switcher -->
        <brick control="\QUI\TemplateTailwindCss\Controls\VerticalTabSwitcher">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="brick.verticalTabSwitcher.title"/>
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="brick.verticalTabSwitcher.description"/>
            </description>

            <settings>
                <setting name="imagePos" type="select">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.verticalTabSwitcher.imagePos"/>

                    <option value="top">
                        <locale group="quiqqer/template-tailwindcss"
                                var="brick.verticalTabSwitcher.imagePos.top"/>
                    </option>
                    <option value="bottom">
                        <locale group="quiqqer/template-tailwindcss"
                                var="brick.verticalTabSwitcher.imagePos.bottom"/>
                    </option>
                </setting>

                <setting name="navTitle" type="text">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.verticalTabSwitcher.navTitle"/>
                </setting>

                <setting name="entries"
                         data-qui="package/quiqqer/template-tailwindcss/bin/Controls/VerticalTabSwitcherSettings">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.verticalTabSwitcher.entries"/>
                </setting>
            </settings>
        </brick>

        <!-- Separator element -->
        <brick control="\QUI\TemplateTailwindCss\Controls\Separator">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="brick.Separator.title"/>
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="brick.Separator.description"/>
            </description>

            <settings>
                <setting name="design" type="select">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.Separator.setting.design"/>

                    <option value="simple" selected="selected">
                        <locale group="quiqqer/template-tailwindcss"
                                var="brick.Separator.setting.design.simple"/>
                    </option>
                    <option value="lines">
                        <locale group="quiqqer/template-tailwindcss"
                                var="brick.Separator.setting.design.lines"/>
                    </option>
                    <option value="quote">
                        <locale group="quiqqer/template-tailwindcss"
                                var="brick.Separator.setting.design.quote"/>
                    </option>
                    <option value="dark">
                        <locale group="quiqqer/template-tailwindcss"
                                var="brick.Separator.setting.design.dark"/>
                    </option>
                    <option value="iconLeft">
                        <locale group="quiqqer/template-tailwindcss"
                                var="brick.Separator.setting.design.iconLeft"/>
                    </option>
                    <option value="iconCenter">
                        <locale group="quiqqer/template-tailwindcss"
                                var="brick.Separator.setting.design.iconCenter"/>
                    </option>
                    <option value="iconRight">
                        <locale group="quiqqer/template-tailwindcss"
                                var="brick.Separator.setting.design.iconRight"/>
                    </option>
                </setting>

                <setting type="text" name="icon" class="media-image" data-qui-options-selectable_types="icon" data-qui-options-cssclasses="1">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.Separator.setting.icon"/>
                </setting>
            </settings>
        </brick>

        <!-- Site list preview -->
        <brick control="\QUI\TemplateTailwindCss\Controls\SiteListPreview">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="brick.SiteListPreview.title"/>
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="brick.SiteListPreview.description"/>
            </description>

            <settings>
                <!-- select site -->
                <setting name="site" data-qui="controls/projects/project/site/Select">
                    <locale group="quiqqer/template-tailwindcss" var="brick.SiteListPreview.setting.site"/>
                </setting>

                <!-- order -->
                <setting name="order" type="select">
                    <locale group="quiqqer/template-tailwindcss" var="brick.SiteListPreview.setting.order"/>

                    <!-- manual -->
                    <option value="order_field">
                        <locale group="quiqqer/bricks" var="brick.control.order.order_field"/>
                    </option>
                    <option value="name ASC">
                        <locale group="quiqqer/quiqqer" var="name_asc"/>
                    </option>
                    <option value="name DESC">
                        <locale group="quiqqer/quiqqer" var="name_desc"/>
                    </option>
                    <option value="title ASC">
                        <locale group="quiqqer/quiqqer" var="title_asc"/>
                    </option>
                    <option value="title DESC">
                        <locale group="quiqqer/quiqqer" var="title_desc"/>
                    </option>
                    <option value="c_date ASC">
                        <locale group="quiqqer/quiqqer" var="c_date_asc"/>
                    </option>
                    <option value="c_date DESC" selected="selected">
                        <locale group="quiqqer/quiqqer" var="c_date_desc"/>
                    </option>
                    <option value="e_date ASC">
                        <locale group="quiqqer/quiqqer" var="e_date_asc"/>
                    </option>
                    <option value="e_date DESC">
                        <locale group="quiqqer/quiqqer" var="e_date_desc"/>
                    </option>
                    <option value="release_from ASC">
                        <locale group="quiqqer/quiqqer" var="release_from_asc"/>
                    </option>
                    <option value="release_from DESC">
                        <locale group="quiqqer/quiqqer" var="release_from_desc"/>
                    </option>
                </setting>

                <setting name="listTemplate" type="select">
                    <locale group="quiqqer/template-tailwindcss" var="brick.SiteListPreview.setting.listTemplate"/>
                    <option value="default">
                        <locale group="quiqqer/template-tailwindcss" var="brick.SiteListPreview.setting.listTemplate.default"/>
                    </option>
                </setting>

                <setting name="previewTemplate" type="select">
                    <locale group="quiqqer/template-tailwindcss" var="brick.SiteListPreview.setting.previewTemplate"/>
                    <option value="circle">
                        <locale group="quiqqer/template-tailwindcss" var="brick.SiteListPreview.setting.previewTemplate.circle"/>
                    </option>
                </setting>

                <setting name="limit" type="number">
                    <default>3</default>
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.SiteListPreview.setting.template.limit"
                    />
                </setting>

                <setting name="additionalText" type="text" data-qui="controls/editors/Input">
                    <locale group="quiqqer/template-tailwindcss" var="brick.SiteListPreview.setting.additionalText"/>
                </setting>

            </settings>
        </brick>

        <!-- defined areas in the template -->
        <templateAreas>
            <!-- global areas -->

            <areas>
                <area name="header" inheritance="1" priority="1">
                    <title>
                        <locale group="quiqqer/template-tailwindcss"
                                var="area.header.title"
                        />
                    </title>
                    <description>
                        <locale group="quiqqer/template-tailwindcss"
                                var="area.header.description"
                        />
                    </description>
                </area>

                <area name="headerSuffix" inheritance="1" priority="1">
                    <title>
                        <locale group="quiqqer/template-tailwindcss"
                                var="area.headerSuffix.title"
                                />
                    </title>
                    <description>
                        <locale group="quiqqer/template-tailwindcss"
                                var="area.headerSuffix.description"
                                />
                    </description>
                </area>

                <area name="footerPrefix" inheritance="1" priority="5">
                    <title>
                        <locale group="quiqqer/template-tailwindcss"
                                var="area.footerPrefix.title"
                                />
                    </title>
                    <description>
                        <locale group="quiqqer/template-tailwindcss"
                                var="area.footerPrefix.description"
                                />
                    </description>
                </area>

                <area name="footer" inheritance="1" priority="6">
                    <title>
                        <locale group="quiqqer/template-tailwindcss"
                                var="area.footer.title"
                                />
                    </title>
                    <description>
                        <locale group="quiqqer/template-tailwindcss"
                                var="area.footer.description"
                                />
                    </description>
                </area>
            </areas>

            <!-- specific type areas -->
            <layouts>

                <layout layout="layout/startPage">
                    <area name="contentPrefix" inheritance="1" priority="2">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.contentPrefix.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.contentPrefix.description"
                                    />
                        </description>
                    </area>
                    <area name="suffixContent" inheritance="1" priority="4">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.suffixContent.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.suffixContent.description"
                                    />
                        </description>
                    </area>
                </layout>

                <layout layout="layout/productLandingPage">
                    <area name="contentPrefix" inheritance="1" priority="2">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.contentPrefix.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.contentPrefix.description"
                            />
                        </description>
                    </area>

                    <area name="suffixContent" inheritance="1" priority="4">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.suffixContent.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.suffixContent.description"
                            />
                        </description>
                    </area>
                </layout>

                <layout layout="layout/noSidebar">
                    <area name="noSidebar">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.noSidebar.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.noSidebar.description"
                                    />
                        </description>
                    </area>

                    <area name="contentPrefix" inheritance="1" priority="2">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.contentPrefix.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.contentPrefix.description"
                                    />
                        </description>
                    </area>

                    <area name="suffixContent" inheritance="1" priority="4">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.suffixContent.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.suffixContent.description"
                                    />
                        </description>
                    </area>
                </layout>

                <layout layout="layout/noSidebarThin">
                    <area name="noSidebar">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.noSidebarThin.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.noSidebarThin.description"
                            />
                        </description>
                    </area>

                    <area name="contentPrefix" inheritance="1" priority="2">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.contentPrefix.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.contentPrefix.description"
                            />
                        </description>
                    </area>

                    <area name="suffixContent" inheritance="1" priority="4">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.suffixContent.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.suffixContent.description"
                            />
                        </description>
                    </area>
                </layout>

                <layout layout="layout/leftSidebar">
                    <area name="leftSidebar" inheritance="1" priority="3">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.leftSidebar.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.leftSidebar.description"
                                    />
                        </description>
                    </area>

                    <area name="contentPrefix" inheritance="1" priority="2">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.contentPrefix.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.contentPrefix.description"
                                    />
                        </description>
                    </area>

                    <area name="suffixContent" inheritance="1" priority="3">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.suffixContent.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.suffixContent.description"
                                    />
                        </description>
                    </area>
                </layout>

                <layout layout="layout/rightSidebar">
                    <area name="rightSidebar" inheritance="1" priority="3">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.rightSidebar.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.rightSidebar.description"
                                    />
                        </description>
                    </area>

                    <area name="contentPrefix" inheritance="1" priority="2">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.contentPrefix.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.contentPrefix.description"
                                    />
                        </description>
                    </area>

                    <area name="suffixContent" inheritance="1" priority="4">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.suffixContent.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.suffixContent.description"
                                    />
                        </description>
                    </area>
                </layout>
            </layouts>
        </templateAreas>
    </bricks>

</quiqqer>
