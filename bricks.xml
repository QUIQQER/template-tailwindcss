<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <bricks>

        <!-- generall settings for all bricks -->
        <brick control="*">
            <settings>
                <setting name="general.fullWidth" type="checkbox">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.general.fullWidth"/>
                </setting>
                <setting name="general.noSpacing" type="checkbox">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.general.noSpacing"/>
                </setting>
            </settings>
        </brick>

        <!-- Hero Header -->
        <brick control="\QUI\TemplateTailwindCss\Controls\HeroHeader">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="brick.heroHeader.title"/>
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="brick.heroHeader.description"/>
            </description>

            <settings>
                <setting name="backgroundImage" class="media-image">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.heroHeader.backgroundImage"/>
                </setting>

                <setting name="minHeight" type="select">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.heroHeader.minHeight.text"/>

                    <option value="30vh">30%</option>
                    <option value="40vh">40%</option>
                    <option value="50vh">50%</option>
                    <option value="60vh">60%</option>
                    <option value="70vh">70%</option>
                    <option value="80vh">80%</option>
                    <option value="90vh">90%</option>
                    <option value="100vh">100%</option>
                </setting>

                <setting name="image" class="media-image">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.heroHeader.image"/>
                </setting>

                <setting name="imageHeight" type="select">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.heroHeader.imageHeight.text"/>

                    <option value="200px">200px</option>
                    <option value="250px">250px</option>
                    <option value="300px">300px</option>
                    <option value="350px">350px</option>
                    <option value="400px">400px</option>
                    <option value="450px">450px</option>
                    <option value="500px">500px</option>
                    <option value="550px">550px</option>
                    <option value="600px">600px</option>
                </setting>
            </settings>
        </brick>

        <!--Vertical Tab Switcher -->
        <brick control="\QUI\TemplateTailwindCss\Controls\VerticalTabSwitcher">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="brick.verticalTabSwitcher.title"/>
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="brick.verticalTabSwitcher.description"/>
            </description>

            <settings>
                <setting name="imagePos" type="select">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.verticalTabSwitcher.imagePos"/>

                    <option value="top">
                        <locale group="quiqqer/template-tailwindcss"
                                var="brick.verticalTabSwitcher.imagePos.top"/>
                    </option>
                    <option value="bottom">
                        <locale group="quiqqer/template-tailwindcss"
                                var="brick.verticalTabSwitcher.imagePos.bottom"/>
                    </option>
                </setting>

                <setting name="navTitle" type="text">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.verticalTabSwitcher.navTitle"/>
                </setting>

                <setting name="entries"
                         data-qui="package/quiqqer/template-tailwindcss/bin/Controls/VerticalTabSwitcherSettings">
                    <locale group="quiqqer/template-tailwindcss"
                            var="brick.verticalTabSwitcher.entries"/>
                </setting>
            </settings>
        </brick>


        <!-- defined areas in the template -->
        <templateAreas>
            <!-- global areas -->

            <areas>
                <area name="header" inheritance="1" priority="1">
                    <title>
                        <locale group="quiqqer/template-tailwindcss"
                                var="area.header.title"
                        />
                    </title>
                    <description>
                        <locale group="quiqqer/template-tailwindcss"
                                var="area.header.description"
                        />
                    </description>
                </area>

                <area name="headerSuffix" inheritance="1" priority="1">
                    <title>
                        <locale group="quiqqer/template-tailwindcss"
                                var="area.headerSuffix.title"
                                />
                    </title>
                    <description>
                        <locale group="quiqqer/template-tailwindcss"
                                var="area.headerSuffix.description"
                                />
                    </description>
                </area>

                <area name="footerPrefix" inheritance="1" priority="5">
                    <title>
                        <locale group="quiqqer/template-tailwindcss"
                                var="area.footerPrefix.title"
                                />
                    </title>
                    <description>
                        <locale group="quiqqer/template-tailwindcss"
                                var="area.footerPrefix.description"
                                />
                    </description>
                </area>

                <area name="footer" inheritance="1" priority="6">
                    <title>
                        <locale group="quiqqer/template-tailwindcss"
                                var="area.footer.title"
                                />
                    </title>
                    <description>
                        <locale group="quiqqer/template-tailwindcss"
                                var="area.footer.description"
                                />
                    </description>
                </area>
            </areas>

            <!-- specific type areas -->
            <layouts>

                <layout layout="layout/startPage">
                    <area name="contentPrefix" inheritance="1" priority="2">
                        <title>
