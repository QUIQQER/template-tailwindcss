                                    var="area.suffixContent.description"
                                    />
                        </description>
                    </area>
                </layout>

                <layout layout="layout/productLandingPage">
                    <area name="contentPrefix" inheritance="1" priority="2">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.contentPrefix.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.contentPrefix.description"
                            />
                        </description>
                    </area>

                    <area name="suffixContent" inheritance="1" priority="4">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.suffixContent.title"
                            />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.suffixContent.description"
                            />
                        </description>
                    </area>
                </layout>

                <layout layout="layout/noSidebar">
                    <area name="noSidebar">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.noSidebar.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.noSidebar.description"
                                    />
                        </description>
                    </area>

                    <area name="contentPrefix" inheritance="1" priority="2">
                        <title>
                            <locale group="quiqqer/template-tailwindcss"
                                    var="area.contentPrefix.title"
                                    />
                        </title>
                        <description>
                            <locale group="quiqqer/template-tailwindcss"
