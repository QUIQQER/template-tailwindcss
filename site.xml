<?xml version="1.0" encoding="UTF-8"?>
<site>
    <!-- global attributes -->
    <attributes>
        <attribute>templateTailwindCss.header</attribute>
        <attribute>templateTailwindCss.showTitle</attribute>
        <attribute>templateTailwindCss.showShort</attribute>
    </attributes>

    <settings>
        <category name="templateTailwindCss.siteSettings">
            <settings>
                <title>
                    <locale group="quiqqer/template-tailwindcss"
                            var="site.settings"/>
                </title>

                <!-- show header -->
                <select conf="templateTailwindCss.header">
                    <text>
                        <locale group="quiqqer/template-tailwindcss"
                                var="site.settings.header"/>
                    </text>
                    <option value="default">
                        <locale group="quiqqer/template-tailwindcss"
                                var="site.settings.header.default"/>
                    </option>
                    <option value="show">
                        <locale group="quiqqer/template-tailwindcss"
                                var="site.settings.header.show"/>
                    </option>
                    <option value="hide">
                        <locale group="quiqqer/template-tailwindcss"
                                var="site.settings.header.hide"/>
                    </option>
                </select>

                <!-- show title -->
                <input conf="templateTailwindCss.showTitle" type="checkbox">
                    <text>
                        <locale group="quiqqer/template-tailwindcss"
                                var="site.settings.showTitle"/>
                    </text>
                </input>

                <!-- show short desc -->
                <input conf="templateTailwindCss.showShort" type="checkbox">
                    <text>
                        <locale group="quiqqer/template-tailwindcss"
                                var="site.settings.showShort"/>
                    </text>
                </input>
            </settings>
        </category>
    </settings>


    <!-- layouts -->
    <layouts>
        <layout type="layout/startPage"
                image="bin/layouts/startPage.png">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.startPage" />
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.startPage.desc" />
            </description>
        </layout>

        <layout type="layout/productLandingPage"
                image="bin/layouts/productLandingPage.png">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.productLandingPage" />
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.productLandingPage.desc" />
            </description>
        </layout>

        <layout type="layout/noSidebar"
                image="bin/layouts/noSidebar.png">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.noSidebar" />
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.noSidebar.desc" />
            </description>
        </layout>

        <layout type="layout/noSidebarThin"
                image="bin/layouts/noSidebarThin.png">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.noSidebarThin" />
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.noSidebarThin.desc" />
            </description>
        </layout>

        <layout type="layout/leftSidebar"
                image="bin/layouts/leftSidebar.png">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.leftSidebar" />
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.leftSidebar.desc" />
            </description>
        </layout>

        <layout type="layout/rightSidebar"
                image="bin/layouts/rightSidebar.png">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.rightSidebar" />
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.rightSidebar.desc" />
            </description>
        </layout>
    </layouts>

</site>
