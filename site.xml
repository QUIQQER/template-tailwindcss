<?xml version="1.0" encoding="UTF-8"?>
<site>
    <!-- global attributes -->
    <attributes>
        <attribute>site.settings.pageTitle</attribute>
        <attribute>site.settings.pageShort</attribute>
        <attribute>site.settings.pageHeader</attribute>
        <attribute>site.settings.pageTitleAndShortPos</attribute>
        <attribute>site.settings.pageBreadcrumb</attribute>
    </attributes>

    <settings>
        <category name="templateTailwindCss.siteSettings">
            <settings>
                <title>
                    <locale group="quiqqer/template-tailwindcss"
                            var="site.settings"/>
                </title>

                <!-- TITLE -->
                <select conf="site.settings.pageTitle">
                    <text>
                        <locale group="quiqqer/template-tailwindcss"
                                var="site.settings.pageTitle"/>
                    </text>
                    <option value="default">
                        <locale group="quiqqer/template-tailwindcss"
                                var="general.settings.locale.default"/>
                    </option>
                    <option value="show">
                        <locale group="quiqqer/template-tailwindcss"
                                var="general.settings.locale.show"/>
                    </option>
                    <option value="hide">
                        <locale group="quiqqer/template-tailwindcss"
                                var="general.settings.locale.hide"/>
                    </option>
                </select>

                <!-- SHORT DESCRIPTION -->
                <select conf="site.settings.pageShort">
                    <text>
                        <locale group="quiqqer/template-tailwindcss"
                                var="site.settings.pageShort"/>
                    </text>
                    <option value="default">
                        <locale group="quiqqer/template-tailwindcss"
                                var="general.settings.locale.default"/>
                    </option>
                    <option value="show">
                        <locale group="quiqqer/template-tailwindcss"
                                var="general.settings.locale.show"/>
                    </option>
                    <option value="hide">
                        <locale group="quiqqer/template-tailwindcss"
                                var="general.settings.locale.hide"/>
                    </option>
                </select>

                <!-- HEADER -->
                <select conf="site.settings.pageHeader">
                    <text>
                        <locale group="quiqqer/template-tailwindcss"
                                var="site.settings.pageHeader"/>
                    </text>
                    <option value="default">
                        <locale group="quiqqer/template-tailwindcss"
                                var="general.settings.locale.default"/>
                    </option>
                    <option value="show">
                        <locale group="quiqqer/template-tailwindcss"
                                var="general.settings.locale.show"/>
                    </option>
                    <option value="hide">
                        <locale group="quiqqer/template-tailwindcss"
                                var="general.settings.locale.hide"/>
                    </option>
                </select>

                <!-- TITLE AND SHORT POSITION -->
                <select conf="site.settings.pageTitleAndShortPos">
                    <text>
                        <locale group="quiqqer/template-tailwindcss"
                                var="site.settings.pageTitleAndShortPos"/>
                    </text>
                    <option value="default">
                        <locale group="quiqqer/template-tailwindcss"
                                var="general.settings.locale.default"/>
                    </option>
                    <option value="header">
                        <locale group="quiqqer/template-tailwindcss"
                                var="general.settings.titleAndShortPos.header"/>
                    </option>
                    <option value="page">
                        <locale group="quiqqer/template-tailwindcss"
                                var="general.settings.titleAndShortPos.page"/>
                    </option>
                </select>


                <!-- BREADCRUMB -->
                <select conf="site.settings.pageBreadcrumb">
                    <text>
                        <locale group="quiqqer/template-tailwindcss"
                                var="site.settings.pageBreadcrumb"/>
                    </text>
                    <option value="default">
                        <locale group="quiqqer/template-tailwindcss"
                                var="general.settings.locale.default"/>
                    </option>
                    <option value="show">
                        <locale group="quiqqer/template-tailwindcss"
                                var="general.settings.locale.show"/>
                    </option>
                    <option value="hide">
                        <locale group="quiqqer/template-tailwindcss"
                                var="general.settings.locale.hide"/>
                    </option>
                </select>

            </settings>
        </category>
    </settings>


    <!-- layouts -->
    <layouts>
        <layout type="layout/startPage"
                image="bin/layouts/startPage.png">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.startPage" />
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.startPage.desc" />
            </description>
        </layout>

        <layout type="layout/productLandingPage"
                image="bin/layouts/productLandingPage.png">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.productLandingPage" />
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.productLandingPage.desc" />
            </description>
        </layout>

        <layout type="layout/noSidebar"
                image="bin/layouts/noSidebar.png">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.noSidebar" />
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.noSidebar.desc" />
            </description>
        </layout>

        <layout type="layout/noSidebarThin"
                image="bin/layouts/noSidebarThin.png">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.noSidebarThin" />
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.noSidebarThin.desc" />
            </description>
        </layout>

        <layout type="layout/leftSidebar"
                image="bin/layouts/leftSidebar.png">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.leftSidebar" />
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.leftSidebar.desc" />
            </description>
        </layout>

        <layout type="layout/rightSidebar"
                image="bin/layouts/rightSidebar.png">
            <title>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.rightSidebar" />
            </title>
            <description>
                <locale group="quiqqer/template-tailwindcss"
                        var="admin.layout.rightSidebar.desc" />
            </description>
        </layout>
    </layouts>

</site>
